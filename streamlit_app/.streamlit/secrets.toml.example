# Streamlit Secrets Configuration Template
# Copy this file to secrets.toml and fill in your values

[general]
# API Configuration for deployed backend
API_BASE_URL = "https://your-backend-api.herokuapp.com"  # Update with your deployed backend URL

# For local development
# API_BASE_URL = "http://localhost:8000"

[streamlit]
# Server configuration
SERVER_PORT = 8501
SERVER_ADDRESS = "0.0.0.0"
DEBUG = false

# Upload configuration
MAX_UPLOAD_SIZE_MB = 100

# Authentication (if enabled later)
# SECRET_KEY = "your-secret-key-here"
# ENABLE_AUTH = false