{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "shared/src/**/*",
    "client/src/**/*",
    "server/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "ai-service"
  ]
}